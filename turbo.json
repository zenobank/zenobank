{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["SENTRY_AUTH_TOKEN", "ENABLE_EXPERIMENTAL_COREPACK", "API_URL"]
    },
    "lint": {
      "dependsOn": ["^lint", "format"],
      "cache": false
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "api-client:generate": {
      "dependsOn": ["api#build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "API_URL",
        "apps/api/openapi.json"
      ],
      "outputs": ["src/**", "dist/**"]
    }
  }
}
